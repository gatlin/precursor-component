{
  "name": "precursor-component",
  "version": "0.2.0",
  "description": "embedded precursor vm in a webcomponent",
  "author": "gatlin@niltag.net",
  "license": "AGPL-3.0",
  "main": "precursor.component.js",
  "module": "precursor.component.js",
  "types": "index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "bundle": "tsc && rollup -c",
    "clean": "rimraf \"{*.d.ts,*.map,*.js.map,*.component.js,*.controller.js}\"",
    "format": "prettier --write \"{src/**/*.ts}\"",
    "lint": "eslint \"{src/**/*.ts}\" --fix",
    "prepublishOnly": "npm run build",
    "example": "tsc -p tsconfig.json && concurrently -k -r \"tsc -p tsconfig.json --watch --preserveWatchOutput\" \"wds --node-resolve --watch\""
  },
  "dependencies": {
    "lit": "^2.0.0-rc.2",
    "lit-robot-manager": "github:gatlin/manager",
    "precursor-ts": "github:gatlin/precursor-ts",
    "robot3": "^0.2.19",
    "torc": "github:gatlin/torc#b3658ab99c73725ee783a2ebe190a0fa8f6851d5",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "@web/dev-server": "^0.1.18",
    "@web/dev-server-rollup": "^0.3.8",
    "@web/dev-server-storybook": "^0.1.3",
    "concurrently": "^5.3.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.0",
    "rollup-plugin-summary": "^1.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.2.4"
  }
}
